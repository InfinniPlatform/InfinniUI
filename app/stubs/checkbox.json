{
  "DataSources": [
    {
      "ObjectDataSource": {
        "Name": "MainDataSource"
      }
    },
    {
      "ObjectDataSource": {
        "Name": "BloodGroupDataSource",
        "Items": [
          {
            "Id": 1,
            "DisplayName": "I"
          },
          {
            "Id": 2,
            "DisplayName": "II"
          },
          {
            "Id": 3,
            "DisplayName": "III"
          },
          {
            "Id": 4,
            "DisplayName": "IV"
          }
        ]
      }
    }
  ],
  "LayoutPanel": {
    "StackPanel": {
      "Name": "",
      "Items": [
        {
          "CheckBox": {
            "Text": "Подписаться на новости",
            "Value": {
              "PropertyBinding": {
                "DataSource": "MainDataSource",
                "Property": "IsSubscribe"
              }
            },
            "OnValueChanged": {
              "Name": "OnValueChanged"
            },
            "OnValueChanging": {
              "Name": "OnValueChanging"
            }
          }
        },
        {
          "ListBox": {
            "DisplayProperty": "DisplayName",
            "MultiSelect": false,
            "ValueSelector": {
              "Name": "ValueSelector"
            },
            "Items": {
              "PropertyBinding": {
                "DataSource": "BloodGroupDataSource"
              }
            },
            "OnValueChanged": {
              "Name": "OnValueChanged"
            }
          }
        }

      ]
    }
  },
  "Scripts": [
    {
      "Name": "OnValueChanged",
      "Body": "console.log('OnValueChanged', args);"
    },
    {
      "Name": "OnValueChanging",
      "Body": "console.log('OnValueChanging', args);return false;"
    },
    {
      "Name": "ValueSelector",
      "Body": "console.log(args.value.DisplayName); return {id: args.value.DisplayName};"
    }
  ]
}

